{# cSpell:ignore mt_x #}

{# ┌┄┄┄┄┄┄┄┄┄┄┄┄┄ if any message exists ┄┄┄┄┄┄┄┄┄┄┄┄┄┐ #}
{% if msgInfo or msgWarn or msgError or msgSuccess %}

<div class="text-center text-md-center">
    <h6 class="font-weight-normal">
        {# Warn is only used is ups_handler, to show a 'light error', if user is adm, follows str(e) #}
        {% set mt_x= "mt-0" %}
        {% set mt_d= "mt-2" %}

        {# ┄┄┄┄┄ Warning ┄┄┄┄┄ #}
        {% if msgWarn %}
        <div class="alert alert-warning mb-0">
            {{ msgWarn | safe }}
        </div>
        {% set mt_x= mt_d %}
        {% endif %}

        {# ┄┄┄┄┄ Error ┄┄┄┄┄ #}
        {% if msgError %}
        <div class="alert alert-danger mb-0 {{mt_x}}">
            {{ msgError | safe }}
        </div>
        {% set mt_x= mt_x or mt_d %}
        {% endif %}

        {# ┄┄┄┄┄ Success ┄┄┄┄┄ #}
        {% if msgSuccess %}
        <div class="alert alert-success mb-0 {{mt_x}}">
            {{ msgSuccess | safe }}
        </div>
        {% set mt_x= mt_x or mt_d %}
        {% endif %}

        {# ┄┄┄┄┄ Information ┄┄┄┄┄ #}
        {% if msgInfo %}
        <div class="alert alert-info mb-0 {{mt_x}}">
            {{ msgInfo | safe }}
        </div>
        {% endif %}
    </h6>
</div>

{% endif %}
{# └┄┄┄┄┄┄┄┄┄┄┄┄┄ if any message exists ┄┄┄┄┄┄┄┄┄┄┄┄┄┘ #}

{# eof #}