    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask APP",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "module": "flask",
            "env": {
                "FLASK_APP": "main.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "true",
                "CANOA_DEBUG": "true",
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/carranca",
        }
    ]
}