{% extends "./layouts/form.html.j2" %}

{% block frm_blc_above %}
{% if msgSuccess %}
<div class="d-grid">
    <button type="button" class="btn form-main-btn" onclick="window.location.href='{{ private_route('home') }}'">
        {{successButton }}</button>
</div>
{% endif %}
{% endblock frm_blc_above %}

{% block frm_blc_content %}
{% if not msgSuccess %}
<div class="form-group mb-3">
    <label class="form-label" inert for={{ form.filename.id }}>{{ fileLabel }}</label>
    <div class="input-group">
        <span class="input-group-text">
            <span class="fa fa-upload fa-lg"></span>
        </span>
        {{ form.filename() }}
    </div>
</div>
<div class="form-group mb-3">
    <label class="form-label" inert for={{ form.urlname.id }}>{{ urlLabel }}</label>
    <div class="input-group">
        <span class="input-group-text">
            <span class="fa fa-cloud-upload fa-lg"></span>
        </span>
        {{ form.urlname(class="form-control") }}
    </div>
</div>
{% endif %}
{% endblock frm_blc_content %}

