    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask APP",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "module": "flask",
            //"program": "${workspaceFolder}/carranca/main.py",
            "env": {
                "CANOA_DEBUG": "1",
                "FLASK_APP": "main",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
            },
            "args": [
                "run"
                , "--no-reload"
                , "--no-debugger"
                // https://stackoverflow.com/questions/73635412/flask-run-with-argument
                // https://flask.palletsprojects.com/en/3.0.x/cli/
                //, "--app --display_mute"
              ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/carranca",
        }
    ]
}