{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask APP",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "module": "flask",
            "env": {
                "CANOA_DEBUG": "T",
                "CANOA_SQLALCHEMY_DATABASE_URI": "postgresql://canoa_connstr:******",
                "CANOA_EMAIL_API_KEY": "do NOT write here",
                "CANOA_EMAIL_ORIGINATOR": "",
                "CANOA_EMAIL_REPORT_CC": ""
                // https://flask.palletsprojects.com/en/latest/config/#SERVER_NAME
                // PREFERRED_URL_SCHEME
                // https://flask.palletsprojects.com/en/latest/cli/  Command Line I
                "FLASK_APP": "main",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "T",
            },
            "args": [
                "run",
                "--no-reload",
                "--no-debugger"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/carranca",
        }
    ]
}