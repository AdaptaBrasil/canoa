{% set dlg_var_icon_url= iconFileUrl %}
{% set dlg_cls_size= 'modal-xl' %}
{% extends "./layouts/form.html.j2" %}

{# ╒══════════════════════ Inputs ═════════════════════════╕ #}
{% block frm_blc_inputs %}

{# ╒════════════════ Container ════════════════════════╕ #}
<div class="container">
    <div class="row">
        {# ╒══════════════ Column 1 ═══════════════╕ #}
        <div class="col-12 col-md-5">
            <div class="mb-3"> {# [ Name #}
                <div class="form-group">
                    <label class="form-label" inert for="{{ form.name.id }}">{{ nameLabel }}</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-vector-square" aria-hidden="true"></i>
                        </span>
                        {{ form.name() }}
                    </div>
                </div>
            </div> {# Name ] #}

            <div class="mb-3"> {# [ Color #}
                <div class="form-group mt-3">
                    <label class="form-label" inert for="{{ form.color.id }}">{{ backColorLabel }}</label>
                    <div class="input-group">
                        <button class="input-group-text" type="button" id="colorBtn">
                            <i class="fas" aria-hidden="true"
                                data-class='{"text": "fa-keyboard", "color": "fa-palette"}' id="colorImg"></i>
                        </button>
                        {{ form.color() }}
                    </div>
                </div>
            </div>{# Color ] #}

            <div class="mb-3"> {# [ Title #}
                <div class="form-group mt-3">
                    <label class="form-label" inert for="{{ form.title.id }}">{{ titleLabel }}</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-tag" aria-hidden="true"></i>
                        </span>
                        {{ form.title() }}
                    </div>
                </div>
            </div> {# Title ] #}

            <div class="mb-3"> {# [ Simple Description #}
                <div class=" form-group">
                    <label class="form-label" inert for="{{ form.description.id }}">{{ descriptionLabel }}</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-tags" aria-hidden="true"></i>
                        </span>
                        {{ form.description() }}
                    </div>
                </div>
            </div> {# Simple Description ] #}

            <div class="mb-3"> {# [ Visible #}
                <div class="form-group">
                    <div class="form-check">
                        {{ form.visible() }}
                        <label class="unselectable-text form-check-label" for="{{form.visible.name}}">
                            {{ visibleLabel }}
                        </label>
                    </div>
                </div>
            </div> {# Visible ] #}

        </div>
        {# ╘═════════════ Column 1 ════════════════╛ #}

        {# ╒══════════════ Column 2 ═══════════════╕ #}
        <div class="col-12 col-md-7">
            <div class=""> {# [ Full Description #}
                <div class="form-group">
                    <label class="form-label" inert for="{{form.content.id}}">{{ contentLabel }}</label>
                    <div class="input-group">
                        <span class="input-group-text"> <i class="fas fa-file-invoice"></i> </span>
                        {{ form.content() }}
                    </div>
                </div>
            </div> {# Full Description ] #}
        </div>
        {# ╘══════════════ Column 2 ═══════════════╛ #}
    </div>
</div>
{# ╘════════════════ Container ═══════════════════════╛ #}

{% endblock frm_blc_inputs %}
{# ╘══════════════════════ Inputs ═════════════════════════╛ #}

{% block dlg_blc_javascript %}
<script>
    const colorBtn = '{{ color_btn | default("colorBtn") }}';
    const colorInp = '{{ color_inp | default("colorInp") }}';
    const colorImg = '{{ color_img | default("colorImg") }}';
    const colorInv = '{{ color_inv | default("invalid color.") }}';

</script>
<script src="{{static_route('js/scm_new_edit.js')}}"></script>
{% endblock dlg_blc_javascript %}


