{# cSpell:ignore elif mgmt #}


{% if msgInfo or msgWarn or msgError or msgSuccess %}
<!-- { BackendMessage -->
<div class="text-center text-md-center mt-0 mb-3">
    <h6 class="font-weight-normal">
        {# Warn is only used is ups_handler, to show a 'light error', if user is adm, follows str(e) #}
        {% if msgWarn %}
        <div class="alert alert-warning">
            {{ msgWarn | safe }}
        </div>
        {% endif %}

        {% if msgError %}
        <div class="alert alert-danger">
            {{ msgError | safe }}
        </div>
        {% endif %}

        {% if msgSuccess %}
        <div class="alert alert-success">
            {{ msgSuccess | safe }}
        </div>
        {% endif %}

        {% if msgInfo %}
        <div class="alert alert-info">
            {{ msgInfo | safe }}
        </div>
        {% endif %}
    </h6>
</div>
<!-- BackendMessage } -->
{% endif %}