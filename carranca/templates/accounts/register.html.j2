{% set btnMsgOnly = gotoLogin %}
{% extends "./layouts/form.html.j2" %}

{% block frm_blc_content %}
{% if not msgOnly %} {# `show msg error and` + `display this block` if (msgError or not msgSuccess) else #}

<!-- { User Name -->
<div class="form-group">
    <label class="form-label" inert for="userName">{{ userLabel }}</label>
    <div class="input-group">
        <span class="input-group-text">
            <i class="fas fa-user"></i>
        </span>
        {{ form.username(class="form-control", id= "userName") }}
    </div>
</div>
<!-- User Name } -->

<!-- Email  -->
<div class="form-group mt-3">
    <label class="form-label" inert for="user_email">{{ emailLabel }}</label>
    <div class="input-group">
        <span class="input-group-text">
            <span class="fas fa-envelope"></span>
        </span>
        {{ form.email(class="form-control", type="email", id="user_email") }}
    </div>
</div>
<!-- Email } -->

<!-- { Password  -->
<div class="form-group mt-3">
    <label class="form-label" inert for="password">{{ passwordLabel }}</label>
    <div class="input-group">
        <span class="input-group-text">
            <span class="fas fa-unlock-alt"></span>
        </span>
        {{ form.password(class="form-control", type="password", id="password") }}
    </div>
</div>
<!-- Password } -->

<div class="row mt-3">
    <div class="col-1" style="width: 1px">
        <input class="form-check-btn" type="checkbox" id="id-termsAccepted" required>
    </div>
    <div class="col-8">
        <label class="form-text form-line" class="form-check-label" for="id-termsAccepted"> {{ termsLabel
            }}&nbsp;</label>
        <br>
        <a class="form-link form-link" href="docs/termsOfUse">{{ termsOfUse }}</a>
        &nbsp;e&nbsp;
        <a href="docs/privacyPolicy" class="form-link">{{ privacyPolicy }}</a>
    </div>

    <div class="col-3 text-right">
        <a class="form-link" href="{{ public_route('login') }}">{{ gotoLogin }}</a>
    </div>
</div>

{% endif %}
{% endblock frm_blc_content %}

{# eof #}