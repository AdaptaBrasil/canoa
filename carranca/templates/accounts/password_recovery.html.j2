{% extends "./layouts/form.html.j2" %}

{% block frm_blc_above %}
    {% if msgSuccess %}
        <div class="d-grid">
            <form action="{{ public_route('login') }}" method="get">
                <button type="submit" class="form-control formMainBtn">{{ successButton }}</button>
            </form>
        </div>
    {% endif %}
{% endblock frm_blc_above %}

{% block frm_blc_content %}
    {% if not msgSuccess %}
        <div class="form-group mb-3">
        <label class="formLabel" inert for="user_email">{{ emailLabel }}</label>
        <div class="input-group">
            <span class="input-group-text">
                <span class="fas fa-envelope"></span>
            </span>
            {{ form.user_email(class="form-control", id="user_email") }}
        </div>
        </div>
    {% endif %}
{% endblock frm_blc_content %}


{% block frm_blc_below %}
    {% if not msgSuccess %}
        <div class="row no-gutters mt-3">
            <div class="col-6">
                <a href="{{ public_route('login') }}" class="formLink">{{ rememberedPassword }}</a>
            </div>
            <div class="col-6 text-right">
                <a href="{{ public_route('register') }}" class="formLink">{{ gotoRegister }}</a>
            </div>
        </div>
    {% endif %}
{% endblock frm_blc_below %}

{# eof #}