    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask APP",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "module": "flask",
            //"program": "${workspaceFolder}/carranca/main.py",
            "env": {
                "FLASK_APP": "carranca",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
            },
            "args": [
                "run"
                , "--no-reload"
              ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
        }
    ]
}